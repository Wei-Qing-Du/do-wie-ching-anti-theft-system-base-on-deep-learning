<Window x:Class="WpfCamera.ShowDataWindow"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"

        Title="ShowData" Height="450" Width="800">
    
    <Window.Resources>
        <Style x:Key= "StyleListView" TargetType="ListViewItem">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="Pink"/>
                </Trigger>
            </Style.Triggers>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <ListView x:Name="lvResults"  ItemContainerStyle="{StaticResource StyleListView}" ItemsSource="{Binding items}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Time" DisplayMemberBinding="{Binding Time}" />
                    <GridViewColumn Header="Detect" DisplayMemberBinding="{Binding Detect}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>

</Window>
